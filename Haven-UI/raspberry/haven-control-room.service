[Unit]
Description=Haven Control Room Web Server
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/Haven_mdev
Environment=PATH=/home/pi/Haven_mdev/.venv/bin
Environment=HAVEN_UI_DIR=/home/pi/Haven_mdev/Haven-UI
ExecStart=/home/pi/Haven_mdev/.venv/bin/python -m uvicorn src.control_room_api:app --host 0.0.0.0 --port 8000 --log-level info
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
